{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "testMatch": ["**/tests/**/*.test.ts"],
  "collectCoverageFrom": [
    "lib/**/*.ts",
    "components/**/*.tsx",
    "app/**/*.tsx",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
